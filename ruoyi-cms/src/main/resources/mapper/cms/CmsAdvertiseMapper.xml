<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.cms.mapper.CmsAdvertiseMapper">
    
    <resultMap type="CmsAdvertise" id="CmsAdvertiseResult">
        <result property="advertiseId"    column="advertise_id"    />
        <result property="siteCode"    column="site_code"    />
        <result property="advertiseName"    column="advertise_name"    />
        <result property="advertiseType"    column="advertise_type"    />
        <result property="advertiseWeight"    column="advertise_weight"    />
        <result property="image"    column="image"    />
        <result property="description"    column="description"    />
        <result property="href"    column="href"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remarks"    column="remarks"    />
    </resultMap>

    <sql id="selectCmsAdvertiseVo">
        select advertise_id, site_code, advertise_name, advertise_type, advertise_weight, image, description, href, start_time, end_time, status, create_by, create_time, update_by, update_time, remarks from cms_advertise
    </sql>

    <select id="selectCmsAdvertiseList" parameterType="CmsAdvertise" resultMap="CmsAdvertiseResult">
        <include refid="selectCmsAdvertiseVo"/>
        <where>  
            <if test="siteCode != null  and siteCode != ''"> and site_code = #{siteCode}</if>
            <if test="advertiseName != null  and advertiseName != ''"> and advertise_name like concat('%', #{advertiseName}, '%')</if>
        </where>
    </select>
    
    <select id="selectCmsAdvertiseByAdvertiseId" parameterType="Long" resultMap="CmsAdvertiseResult">
        <include refid="selectCmsAdvertiseVo"/>
        where advertise_id = #{advertiseId}
    </select>

    <insert id="insertCmsAdvertise" parameterType="CmsAdvertise" useGeneratedKeys="true" keyProperty="advertiseId">
        insert into cms_advertise
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="siteCode != null and siteCode != ''">site_code,</if>
            <if test="advertiseName != null and advertiseName != ''">advertise_name,</if>
            <if test="advertiseType != null">advertise_type,</if>
            <if test="advertiseWeight != null">advertise_weight,</if>
            <if test="image != null">image,</if>
            <if test="description != null">description,</if>
            <if test="href != null">href,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remarks != null">remarks,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="siteCode != null and siteCode != ''">#{siteCode},</if>
            <if test="advertiseName != null and advertiseName != ''">#{advertiseName},</if>
            <if test="advertiseType != null">#{advertiseType},</if>
            <if test="advertiseWeight != null">#{advertiseWeight},</if>
            <if test="image != null">#{image},</if>
            <if test="description != null">#{description},</if>
            <if test="href != null">#{href},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remarks != null">#{remarks},</if>
         </trim>
    </insert>

    <update id="updateCmsAdvertise" parameterType="CmsAdvertise">
        update cms_advertise
        <trim prefix="SET" suffixOverrides=",">
            <if test="siteCode != null and siteCode != ''">site_code = #{siteCode},</if>
            <if test="advertiseName != null and advertiseName != ''">advertise_name = #{advertiseName},</if>
            <if test="advertiseType != null">advertise_type = #{advertiseType},</if>
            <if test="advertiseWeight != null">advertise_weight = #{advertiseWeight},</if>
            <if test="image != null">image = #{image},</if>
            <if test="description != null">description = #{description},</if>
            <if test="href != null">href = #{href},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
        </trim>
        where advertise_id = #{advertiseId}
    </update>

    <delete id="deleteCmsAdvertiseByAdvertiseId" parameterType="Long">
        delete from cms_advertise where advertise_id = #{advertiseId}
    </delete>

    <delete id="deleteCmsAdvertiseByAdvertiseIds" parameterType="String">
        delete from cms_advertise where advertise_id in 
        <foreach item="advertiseId" collection="array" open="(" separator="," close=")">
            #{advertiseId}
        </foreach>
    </delete>
</mapper>