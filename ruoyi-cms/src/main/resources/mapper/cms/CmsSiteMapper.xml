<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.cms.mapper.CmsSiteMapper">
    
    <resultMap type="CmsSite" id="CmsSiteResult">
        <result property="siteId"    column="site_id"    />
        <result property="siteCode"    column="site_code"    />
        <result property="siteName"    column="site_name"    />
        <result property="siteSort"    column="site_sort"    />
        <result property="title"    column="title"    />
        <result property="logo"    column="logo"    />
        <result property="domain"    column="domain"    />
        <result property="keywords"    column="keywords"    />
        <result property="description"    column="description"    />
        <result property="theme"    column="theme"    />
        <result property="phone"    column="phone"    />
        <result property="email"    column="email"    />
        <result property="address"    column="address"    />
        <result property="icp"    column="icp"    />
        <result property="registerNo"    column="register_no"    />
        <result property="copyright"    column="copyright"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remarks"    column="remarks"    />
    </resultMap>

    <sql id="selectCmsSiteVo">
        select site_id, site_code, site_name, site_sort, title, logo, domain, keywords, description, theme, phone, email, address,icp, register_no,  copyright, status, create_by, create_time, update_by, update_time, remarks from cms_site
    </sql>

    <select id="selectCmsSiteList" parameterType="CmsSite" resultMap="CmsSiteResult">
        <include refid="selectCmsSiteVo"/>
        <where>  
            <if test="siteCode != null  and siteCode != ''"> and site_code = #{siteCode}</if>
            <if test="siteName != null  and siteName != ''"> and site_name like concat('%', #{siteName}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectCmsSiteBySiteId" parameterType="Long" resultMap="CmsSiteResult">
        <include refid="selectCmsSiteVo"/>
        where site_id = #{siteId}
    </select>

    <insert id="insertCmsSite" parameterType="CmsSite" useGeneratedKeys="true" keyProperty="siteId">
        insert into cms_site
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="siteCode != null">site_code,</if>
            <if test="siteName != null and siteName != ''">site_name,</if>
            <if test="siteSort != null">site_sort,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="logo != null">logo,</if>
            <if test="domain != null">domain,</if>
            <if test="keywords != null">keywords,</if>
            <if test="description != null">description,</if>
            <if test="theme != null">theme,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
            <if test="address != null">address,</if>
            <if test="icp != null">icp,</if>
            <if test="registerNo != null">register_no,</if>
            <if test="copyright != null">copyright,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remarks != null">remarks,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="siteCode != null">#{siteCode},</if>
            <if test="siteName != null and siteName != ''">#{siteName},</if>
            <if test="siteSort != null">#{siteSort},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="logo != null">#{logo},</if>
            <if test="domain != null">#{domain},</if>
            <if test="keywords != null">#{keywords},</if>
            <if test="description != null">#{description},</if>
            <if test="theme != null">#{theme},</if>
            <if test="phone != null">#{phone},</if>
            <if test="email != null">#{email},</if>
            <if test="address != null">#{address},</if>
            <if test="icp != null">#{icp},</if>
            <if test="registerNo != null">#{registerNo},</if>
            <if test="copyright != null">#{copyright},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remarks != null">#{remarks},</if>
         </trim>
    </insert>

    <update id="updateCmsSite" parameterType="CmsSite">
        update cms_site
        <trim prefix="SET" suffixOverrides=",">
            <if test="siteCode != null">site_code = #{siteCode},</if>
            <if test="siteName != null and siteName != ''">site_name = #{siteName},</if>
            <if test="siteSort != null">site_sort = #{siteSort},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="logo != null">logo = #{logo},</if>
            <if test="domain != null">domain = #{domain},</if>
            <if test="keywords != null">keywords = #{keywords},</if>
            <if test="description != null">description = #{description},</if>
            <if test="theme != null">theme = #{theme},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="address != null">address = #{address},</if>
            <if test="icp != null">icp = #{icp},</if>
            <if test="registerNo != null">register_no = #{registerNo},</if>
            <if test="copyright != null">copyright = #{copyright},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
        </trim>
        where site_id = #{siteId}
    </update>

    <delete id="deleteCmsSiteBySiteId" parameterType="Long">
        delete from cms_site where site_id = #{siteId}
    </delete>

    <delete id="deleteCmsSiteBySiteIds" parameterType="String">
        delete from cms_site where site_id in 
        <foreach item="siteId" collection="array" open="(" separator="," close=")">
            #{siteId}
        </foreach>
    </delete>
</mapper>