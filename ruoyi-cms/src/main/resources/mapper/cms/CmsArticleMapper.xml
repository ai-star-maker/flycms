<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.cms.mapper.CmsArticleMapper">
    
    <resultMap type="CmsArticle" id="CmsArticleResult">
        <result property="articleId"    column="article_id"    />
        <result property="siteCode"    column="site_code"    />
        <result property="categoryCode"    column="category_code"    />
        <result property="title"    column="title"    />
        <result property="keywords"    column="keywords"    />
        <result property="description"    column="description"    />
        <result property="image"    column="image"    />
        <result property="content"    column="content"    />
        <result property="href"    column="href"    />
        <result property="weight"    column="weight"    />
        <result property="source"    column="source"    />
        <result property="copyFrom"    column="copy_from"    />
        <result property="viewConfig"    column="view_config"    />
        <result property="isAudited"    column="is_audited"    />
        <result property="auditBy"    column="audit_by"    />
        <result property="isCanComment"    column="is_can_comment"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remarks"    column="remarks"    />
        <result property="extendS1"    column="extend_s1"    />
        <result property="extendS2"    column="extend_s2"    />
    </resultMap>

    <sql id="selectCmsArticleVo">
        select article_id, site_code, category_code, title, keywords, description, image, content, href, weight, source, copy_from, view_config, is_audited, audit_by, is_can_comment, status, create_by, create_time, update_by, update_time, remarks, extend_s1, extend_s2 from cms_article
    </sql>

    <select id="selectCmsArticleList" parameterType="CmsArticle" resultMap="CmsArticleResult">
        <include refid="selectCmsArticleVo"/>
        <where>  
            <if test="siteCode != null  and siteCode != ''"> and site_code = #{siteCode}</if>
            <if test="categoryCode != null  and categoryCode != ''"> and category_code = #{categoryCode}</if>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="description != null  and description != ''"> and (upper(title) like concat('%', upper(#{description}), '%') or upper(description) like concat('%', upper(#{description}), '%'))</if>
            <if test="isAudited != null  and isAudited != ''"> and is_audited = 'Y' </if>
        </where>
    </select>
    
    <select id="selectCmsArticleByArticleId" parameterType="Long" resultMap="CmsArticleResult">
        <include refid="selectCmsArticleVo"/>
        where article_id = #{articleId}
    </select>

    <insert id="insertCmsArticle" parameterType="CmsArticle" useGeneratedKeys="true" keyProperty="articleId">
        insert into cms_article
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="siteCode != null and siteCode != ''">site_code,</if>
            <if test="categoryCode != null and categoryCode != ''">category_code,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="keywords != null">keywords,</if>
            <if test="description != null">description,</if>
            <if test="image != null">image,</if>
            <if test="content != null">content,</if>
            <if test="href != null">href,</if>
            <if test="weight != null">weight,</if>
            <if test="source != null">source,</if>
            <if test="copyFrom != null">copy_from,</if>
            <if test="viewConfig != null">view_config,</if>
            <if test="isAudited != null">is_audited,</if>
            <if test="auditBy != null">audit_by,</if>
            <if test="isCanComment != null">is_can_comment,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remarks != null">remarks,</if>
            <if test="extendS1 != null">extend_s1,</if>
            <if test="extendS2 != null">extend_s2,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="siteCode != null and siteCode != ''">#{siteCode},</if>
            <if test="categoryCode != null and categoryCode != ''">#{categoryCode},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="keywords != null">#{keywords},</if>
            <if test="description != null">#{description},</if>
            <if test="image != null">#{image},</if>
            <if test="content != null">#{content},</if>
            <if test="href != null">#{href},</if>
            <if test="weight != null">#{weight},</if>
            <if test="source != null">#{source},</if>
            <if test="copyFrom != null">#{copyFrom},</if>
            <if test="viewConfig != null">#{viewConfig},</if>
            <if test="isAudited != null">#{isAudited},</if>
            <if test="auditBy != null">#{auditBy},</if>
            <if test="isCanComment != null">#{isCanComment},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remarks != null">#{remarks},</if>
            <if test="extendS1 != null">#{extendS1},</if>
            <if test="extendS2 != null">#{extendS2},</if>
         </trim>
    </insert>

    <update id="updateCmsArticle" parameterType="CmsArticle">
        update cms_article
        <trim prefix="SET" suffixOverrides=",">
            <if test="siteCode != null and siteCode != ''">site_code = #{siteCode},</if>
            <if test="categoryCode != null and categoryCode != ''">category_code = #{categoryCode},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="keywords != null">keywords = #{keywords},</if>
            <if test="description != null">description = #{description},</if>
            <if test="image != null">image = #{image},</if>
            <if test="content != null">content = #{content},</if>
            <if test="href != null">href = #{href},</if>
            <if test="weight != null">weight = #{weight},</if>
            <if test="source != null">source = #{source},</if>
            <if test="copyFrom != null">copy_from = #{copyFrom},</if>
            <if test="viewConfig != null">view_config = #{viewConfig},</if>
            <if test="isAudited != null">is_audited = #{isAudited},</if>
            <if test="auditBy != null">audit_by = #{auditBy},</if>
            <if test="isCanComment != null">is_can_comment = #{isCanComment},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
            <if test="extendS1 != null">extend_s1 = #{extendS1},</if>
            <if test="extendS2 != null">extend_s2 = #{extendS2},</if>
        </trim>
        where article_id = #{articleId}
    </update>

    <delete id="deleteCmsArticleByArticleId" parameterType="Long">
        delete from cms_article where article_id = #{articleId}
    </delete>

    <delete id="deleteCmsArticleByArticleIds" parameterType="String">
        delete from cms_article where article_id in 
        <foreach item="articleId" collection="array" open="(" separator="," close=")">
            #{articleId}
        </foreach>
    </delete>
</mapper>